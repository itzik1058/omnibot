{
  "compilerOptions": {
    "target": "ES2022",

    "module": "CommonJS",
    "rootDir": "src",
    "moduleResolution": "Node",
    // "baseUrl": ".",
    // "paths": {
    //   "*": ["node_modules/*", "src/types/*"]
    // },
    // "typeRoots": ["node_modules/@types", "src/types"],

    "sourceMap": true,
    "outDir": "dist",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
