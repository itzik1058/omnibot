{
  "compilerOptions": {
    "target": "ES2022",

    "module": "CommonJS",
    "rootDir": "src",
    "moduleResolution": "Node",

    "sourceMap": true,
    "outDir": "dist",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
