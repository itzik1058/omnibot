{
  "compilerOptions": {
    "target": "ES2022",

    "module": "ES2022",
    "rootDir": "src",
    "moduleResolution": "Node",

    "sourceMap": true,
    "outDir": "dist",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true
  }
}
